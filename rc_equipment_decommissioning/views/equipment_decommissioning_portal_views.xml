<odoo>
    <data>

        <record id="menu_equipment_decommissioning_form" model="website.menu">
            <field name="name">Equipment Decommissioning</field>
            <field name="url">/equipment_decommissioning</field>
            <field name="parent_id" ref="website.main_menu"/>
            <field name="sequence">55</field>
        </record>

        <template id="create_equipment_decommissioning" name="Equipment Decommissioning">
