        <template id="portal_layout" name="Portal layout: equipment decommissioning menu entry" inherit_id="portal.portal_breadcrumbs" priority="60">
            <xpath expr="//ol[hasclass('o_portal_submenu')]" position="inside">
                <li t-if="page_name == 'Equipment Decommissionings' or equipment_decommissioning" class="col-lg-2" t-attf-class="breadcrumb-item #{'active ' if not equipment_decommissioning else ''}">
                    <a t-if="equipment_decommissioning" t-attf-href="/my/equipment_decommissionings?{{ keep_query() }}">Equipment Decommissioning</a>
                    <t t-else="">Equipment Decommissionings</t>
                </li>
                <li t-if="equipment_decommissioning" class="breadcrumb-item active text-truncate col-8 col-lg-10">
                    <t t-esc="equipment_decommissioning.name"/>
                </li>
            </xpath>
        </template>

        <template id="portal_my_home1" name="Show equipment decommissionings" customize_show="True" inherit_id="portal.portal_my_home" priority="60">
            <xpath expr="//div[hasclass('o_portal_docs')]" position="inside">
                <t t-call="portal.portal_docs_entry">
                    <t t-set="title">Equipment Decommissionings</t>
                    <t t-set="url" t-value="'/my/equipment_decommissionings'"/>
                    <t t-set="placeholder_count" t-value="'equipment_decommissioning_count'"/>
                </t>
            </xpath>
        </template>

        <template id="portal_my_equipment_decommissionings" name="My Equipment Decommissionings">
            <t t-call="portal.portal_layout">
                <t t-set="breadcrumbs_searchbar" t-value="True"/>

                <t t-call="portal.portal_searchbar">
                    <t t-set="title">equipment Decommissionings</t>
                </t>
                <t t-if="not equipment_decommissionings">
                    <div class="alert alert-warning mt8" role="alert">
                        You have no equipment decommissioning(s). <a href="/equipment_decommissioning">click here</a> to create one.
                    </div>
                </t>
                <t t-if="equipment_decommissionings" t-call="portal.portal_table">
                    <tbody>
                        <tr t-foreach="equipment_decommissionings" t-as="equipment_decommissioning">
                            <td>
                                <a t-attf-href="/my/equipment_decommissioning/#{equipment_decommissioning.id}?{{ keep_query() }}"><span t-field="equipment_decommissioning.name"/></a>
                            </td>
                            <td class="text-right">
                                <span class="badge badge-pill badge-info" title="Current stage of the request" t-esc="equipment_decommissioning.state" />
                            </td>
                        </tr>
                    </tbody>
