                    <t t-call="portal.message_thread">
                        <t t-set="object" t-value="cross_connect"/>
                        <t t-set="pid" t-value="pid"/>
                        <t t-set="hash" t-value="hash"/>
                    </t>
                </div>
            </t>
        </template>

        <template id="cross_connect_submited" name="Cross Connect Received">
            <t t-call="website.layout">
                <div id="wrap" class="oe_structure oe_empty">
                    <div class="container">
                        <div class="row">
                            <t t-if="request.session.get('form_builder_model_model', '') == 'cross.connect'">
                                <t t-set="ticket" t-value="request.website._website_form_last_record().sudo()"/>
                            </t>
                            <h1 class="text-center"><i class="fa fa-check-circle fa-2x text-success" role="img" aria-label="Success" title="Success"/></h1>
                            <t t-if="cross_connect">
                                <h1 class="text-center">Your Request Number is <a t-if="request.session.uid" t-attf-href="/my/cross_connect/#{cross_connect.id}">#<span t-field="cross_connect.id"/></a><t t-if="not request.session.get('uid')">#<span t-field="cross_connect.id"/></t>.</h1>
                            </t>
                            <h1 class="text-center">Thank you for submitting your Request, our team will get right on it!</h1>
                        </div>
                    </div>
                </div>
            </t>
        </template>
        
    </data>
</odoo>