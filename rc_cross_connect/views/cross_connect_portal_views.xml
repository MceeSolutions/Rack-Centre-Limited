        <template id="portal_layout" name="Portal layout: project menu entry" inherit_id="portal.portal_breadcrumbs" priority="60">
            <xpath expr="//ol[hasclass('o_portal_submenu')]" position="inside">
                <li t-if="page_name == 'Cross Connects' or cross_connect" class="col-lg-2" t-attf-class="breadcrumb-item #{'active ' if not cross_connect else ''}">
                    <a t-if="cross_connect" t-attf-href="/my/cross_connects?{{ keep_query() }}">Cross Connects</a>
                    <t t-else="">Cross Connects</t>
                </li>
                <li t-if="cross_connect" class="breadcrumb-item active text-truncate col-8 col-lg-10">
                    <t t-esc="cross_connect.name"/>
                </li>
            </xpath>
        </template>

        <template id="portal_my_home" name="Show Cross Connects" customize_show="True" inherit_id="portal.portal_my_home" priority="60">
            <xpath expr="//div[hasclass('o_portal_docs')]" position="inside">
                <t t-call="portal.portal_docs_entry">
                    <t t-set="title">Cross Connects</t>
                    <t t-set="url" t-value="'/my/cross_connects'"/>
                    <t t-set="placeholder_count" t-value="'cross_connect_count'"/>
                </t>
            </xpath>
        </template>

        <template id="portal_my_cross_connects" name="My Cross Connects">
            <t t-call="portal.portal_layout">
                <t t-set="breadcrumbs_searchbar" t-value="True"/>

                <t t-call="portal.portal_searchbar">
                    <t t-set="title">Cross Connects</t>
                </t>
                <t t-if="not cross_connects">
                    <div class="alert alert-warning mt8" role="alert">
                        There are no Cross Connects. <a href="/cross_connect">Click Here</a> To create one.
                    </div>
                </t>
                <t t-if="cross_connects" t-call="portal.portal_table">
                    <tbody>
                        <tr t-foreach="cross_connects" t-as="cross_connect">
                            <td>
                                <a t-attf-href="/my/cross_connect/#{cross_connect.id}?{{ keep_query() }}"><span t-field="cross_connect.name"/></a>
                            </td>
                            <td class="text-right">
                                <span class="badge badge-pill badge-info" title="Current stage of the request" t-esc="cross_connect.state" />
                            </td>
                        </tr>
                    </tbody>
                </t>
                <br/>
                <a href="/cross_connect" role="button" class="btn pull-right btn-primary">New Cross Connect</a>
            </t>
        </template>

